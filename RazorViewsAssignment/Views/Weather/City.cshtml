@model CityWeather
@{
	ViewBag.Title = $"{@Model.CityName} Weather";
}

<div class="container">
	<div class="box">
		<div class="cityDetailsBlock">
			<h2>@Model.CityName</h2>
			<h3 class="text-grey">@Model.DateAndTime?.ToString("dd MMM yyyy", CultureInfo.InvariantCulture)</h3>
			<h3 class="text-grey">@Model.DateAndTime?.ToString("hh:mm tt", CultureInfo.InvariantCulture)</h3>
		</div>

		<div class="temperatureDetailsBlock">
			<h2>@Model.TemperatureFahrenheit <sup class="text-grey">°F</sup></h2>
		</div>
	</div>
	<div class="footer">
		<a href="~/">Back to Weather Home Page</a>
	</div>
</div>

@section heading{
	<h1>Weather in @Model.CityName</h1>
}